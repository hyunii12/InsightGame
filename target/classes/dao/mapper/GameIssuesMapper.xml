<mapper namespace="dao.IGameIssuesDao">
	<select id="selectAll" resultType="java.util.HashMap">
		<![CDATA[ 
		SELECT a.title, a.score, a.date FROM game_issues AS a 
		WHERE (SELECT COUNT(*) FROM game_issues AS b WHERE b.date = a.date AND b.score >= a.score) <= 15
		ORDER BY a.date DESC, a.score DESC;
		]]> 
	</select>
	<select id="selectByDate" parameterType="java.lang.Object" resultType="java.util.HashMap">
		 
		SELECT a.title, a.score, a.date FROM game_issues AS a 
		WHERE 
			<choose>
				<when test="param != null">a.date = ï¼ƒ{param}</when>
				<otherwise>a.date = CURDATE() - 1</otherwise>
			</choose>
			<![CDATA[
			AND (SELECT COUNT(*) FROM game_issues AS b WHERE b.date = a.date AND b.score >= a.score) <= 15
			]]> 
		ORDER BY a.date DESC, a.score DESC; 
		
